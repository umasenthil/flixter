<script>
    $(function(){
        $('.lessons').sortable({
            update: function(event,ui){
                var new_index = ui.item.index();
                var old_index = ui.item.data('update-url');
                $.ajax({
                      type: 'PUT',
                      url: ui.item.data('update-url'),
                      dataType: 'json',
                      data: { lesson: { row_order_position: ui.item.index() } }
                });
            
                alert("Lesson_ID:old_index"+ old_index + "Current_position:" + new_index); 
            }
        });
        
        $('.sections').sortable({
            update: function(event,ui){
                var new_index = ui.item.index();
                var old_index = ui.item.data('update-url');
                $.ajax({
                      type: 'PUT',
                      url: ui.item.data('update-url'),
                      dataType: 'json',
                      data: { section: { row_order_position: ui.item.index() } }
                });
            
                alert("Section_ID:old_index"+ old_index + "Current_position:" + new_index); 
            }
        });
    });
    
</script>
<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center"><%= current_course.title %> </h1>
    <%= image_tag current_course.image, :class => 'img-responsive' %>
	<br />
	<div class="text-center">
		<%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), :class => 'btn btn-primary btn-lg' %>
    </div>

    <ul class="sections">
    	<% current_course.sections.rank(:row_order).each do |section| %>
    	
    	<li data-update-url=<%= instructor_section_path(section) %>>
    	    <div class="section">
    			<%= section.title %>
    			<%= link_to "New lesson", new_instructor_section_lesson_path(section), :class => 'pull-right btn btn-primary btn-xs' %>
    			<ul class="lessons">
    				<% section.lessons.rank(:row_order).each do |lesson| %>
        				<li data-update-url=<%= instructor_lesson_path(lesson) %>>
        				    <div class="lesson">
                                <%= link_to lesson_path(lesson) do %>
                                <b><%= lesson.title %></b>
        					    -
        					     <%= lesson.subtitle %>
                                <% end %>
        				    </div>
        				</li>
       				<% end %>
    			</ul>
    			<br class="clr" />
    		</div>
    	</li>
    	
    	<% end %>
    </ul>
  
	<br />
	  <% if current_user && current_user == current_course.user %>
      <br />
      <br />
      <%= link_to 'Student page', course_path(current_course), :class => 'btn btn-danger btn-large' %>
    <% end %>
</div>
